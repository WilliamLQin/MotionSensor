            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <View
            android:layout_width="2dp"
            android:layout_height="120dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorBlack"
            app:layout_constraintLeft_toLeftOf="@+id/textView11"
            app:layout_constraintTop_toBottomOf="@+id/textView11"/>

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginLeft="440dp"
            android:layout_marginTop="100dp"
            android:gravity="start"
            android:text="Select degree of\nregression"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <View
            android:layout_width="2dp"
            android:layout_height="70dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorBlack"
            app:layout_constraintLeft_toLeftOf="@+id/textView12"
            app:layout_constraintTop_toBottomOf="@+id/textView12"/>

    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/chart_layout"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="horizontal"
            android:visibility="invisible">

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chartX"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp"
                android:layout_weight="1"/>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chartY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp"
                android:layout_weight="1"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp">

            <!--<ImageButton-->
            <!--android:id="@+id/retry"-->
            <!--android:layout_width="65dp"-->
            <!--android:layout_height="55dp"-->
            <!--android:padding="5dp"-->
            <!--android:background="@color/colorNull"-->
            <!--android:scaleType="fitCenter"-->
            <!--android:src="@drawable/graph_new"/>-->

            <ImageButton
                android:id="@+id/home"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:padding="5dp"
                android:background="@color/colorNull"
                android:scaleType="fitCenter"
                android:src="@drawable/graph_home"/>

            <ImageButton
                android:id="@+id/download"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:padding="5dp"
                android:background="@color/colorNull"
                android:scaleType="fitCenter"
                android:src="@drawable/graph_download"/>

            <ImageButton
                android:id="@+id/showPosition"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:padding="5dp"
                android:background="@color/colorNull"
                android:scaleType="fitCenter"
                android:src="@drawable/graph_position_coloured"/>
            <ImageButton
                android:id="@+id/showVelocity"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:padding="5dp"
                android:background="@color/colorNull"
                android:scaleType="fitCenter"
                android:src="@drawable/graph_velocity_coloured"/>
            <ImageButton
                android:id="@+id/showAcceleration"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:padding="5dp"
                android:background="@color/colorNull"
                android:scaleType="fitCenter"
                android:src="@drawable/graph_acceleration_disabled"/>

            <ImageButton
                android:id="@+id/showHorizontal"
                android:layout_width="65dp"
                android:layout_height="55dp"
                android:padding="5dp"
                android:background="@color/colorNull"
                android:scaleType="fitCenter"
                android:src="@drawable/graph_horizontal"
                android:rotation="0"/>
            <ImageButton
                android:id="@+id/showVertical"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:padding="5dp"
                android:background="@color/colorNull"
                android:scaleType="fitCenter"
                android:src="@drawable/graph_vertical"
                android:rotation="0"/>

            <ImageButton
                android:id="@+id/regression"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:padding="5dp"
                android:background="@color/colorNull"
                android:scaleType="fitCenter"
                android:src="@drawable/graph_regression_disabled"
                android:rotation="0"/>

            <Spinner
                android:id="@+id/regressionDegree"
                android:layout_width="65dp"
                android:layout_height="55dp"
                android:padding="5dp"
                android:spinnerMode="dropdown"/>

            <ImageButton
                android:id="@+id/graph_info"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:padding="5dp"
                android:background="@color/colorNull"
                android:scaleType="fitCenter"
                android:src="@drawable/graph_info"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>






</RelativeLayout>